<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.melnykov.fab.ObservableScrollView
        android:id="@+id/fragment_maintain_task_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/fragment_maintain_task_name_layout"
                style="@style/field_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/field_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_task_name" />

                <TextView
                    android:id="@+id/fragment_maintain_task_name"
                    style="@style/field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/fragment_maintain_task_name_next" />

                <ImageView
                    android:id="@+id/fragment_maintain_task_name_next"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_next_item"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_maintain_task_company_layout"
                style="@style/field_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/field_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_task_company" />

                <TextView
                    android:id="@+id/fragment_maintain_task_company"
                    style="@style/field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/fragment_maintain_task_company_next" />

                <ImageView
                    android:id="@+id/fragment_maintain_task_company_next"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_next_item"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_maintain_task_manager_name_layout"
                style="@style/editable_field_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/field_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_task_manager_name" />

                <TextView
                    android:id="@+id/fragment_maintain_task_manager_name"
                    style="@style/field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/fragment_maintain_task_manager_name_next" />

                <ImageView
                    android:id="@+id/fragment_maintain_task_manager_name_next"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_next_item" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_maintain_task_manager_tel_layout"
                style="@style/editable_field_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/field_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_task_manager_tel" />

                <TextView
                    android:id="@+id/fragment_maintain_task_manager_tel"
                    style="@style/field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/fragment_maintain_task_manager_tel_next" />

                <ImageView
                    android:id="@+id/fragment_maintain_task_manager_tel_next"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_next_item" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_maintain_task_sender_layout"
                style="@style/field_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/field_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_task_sender" />

                <TextView
                    android:id="@+id/fragment_maintain_task_sender"
                    style="@style/field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/fragment_maintain_task_sender_next" />

                <ImageView
                    android:id="@+id/fragment_maintain_task_sender_next"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_next_item"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_maintain_task_send_date_layout"
                style="@style/field_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/field_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_task_send_date" />

                <TextView
                    android:id="@+id/fragment_maintain_task_send_date"
                    style="@style/field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/fragment_maintain_task_send_date_next" />

                <ImageView
                    android:id="@+id/fragment_maintain_task_send_date_next"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_next_item"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_maintain_task_status_layout"
                style="@style/editable_field_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/field_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_task_status" />

                <TextView
                    android:id="@+id/fragment_maintain_task_status"
                    style="@style/field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/fragment_maintain_task_status_edit" />

                <ImageView
                    android:id="@+id/fragment_maintain_task_status_edit"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_next_item" />
            </RelativeLayout>
        </LinearLayout>
    </com.melnykov.fab.ObservableScrollView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_accept"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/primary_pressed"
        fab:fab_colorRipple="@color/ripple" />
</RelativeLayout>
